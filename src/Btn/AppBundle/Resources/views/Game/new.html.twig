          <div class="form-group">
              {{ form_label(form.releasedAt) }}
              {{ form_errors(form.releasedAt) }}
              {{ form_widget(form.releasedAt.date.year, {'attr': {'class': 'form-control'}}) }}
              {{ form_widget(form.releasedAt.date.month, {'attr': {'class': 'form-control'}}) }}
              {{ form_widget(form.releasedAt.date.day, {'attr': {'class': 'form-control'}}) }}
              {{ form_widget(form.releasedAt.time.hour, {'attr': {'class': 'form-control'}}) }}
              {{ form_widget(form.releasedAt.time.minute, {'attr': {'class': 'form-control'}}) }}
          </div>
      {{ form_end(form) }}
